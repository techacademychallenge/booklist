<% if logged_in? %>
  <% if current_user.have?(book) %>
    <%= form_tag(hafe_path(book.id), method: :delete) do %>
      <%= hidden_field_tag :book_id, book.id %>
      <%= submit_tag 'キャンセル', class: 'btn btn-default' %>
    <% end %>
  <% else %>
    <%= form_tag(haves_path) do %>
      <%= hidden_field_tag :book_isbn, book.isbn %>
      <%= submit_tag '持っている', class: 'btn btn-success' %>
    <% end %>
  <% end %>
<% end %>